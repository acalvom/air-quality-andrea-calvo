<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocationsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tvPositionHeaderLocations"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/txtLocationPosition"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvLocationCodeHeaderLocations"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/txtLocationCode"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvLatitudeHeaderLocations"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/txtLocationLatitude"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tvLongitudeHeaderLocations"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:text="@string/txtLocationLongitude"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvLocationsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

</LinearLayout>
